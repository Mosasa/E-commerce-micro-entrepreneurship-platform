/**index.wxss**/
.container {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}
.userinfo {
  width: 100%;
}
.userinfo .notice-bar {
  width: 100%;
}
.userinfo .header-img {
  width: 100%;
  height: 360rpx;
  overflow: hidden;
}
.userinfo .header-img image {
  width: 100%;
  height: 100%;
}
.userinfo .scroll-content{
  height: 226rpx;
  text-align: center;
  margin-top:10rpx;
  padding:12rpx 0;
}
.userinfo .achievement-list {
  width: 100%;
  margin-top: 200rpx;
}
.userinfo .scroll-content .title{
  font-size:44rpx;
  color: #2F4F4F;
  position:relative;
  bottom:10rpx;
}
.userinfo .scroll-content .title-content{
  width: 100%;
  display: flex;
  background: #416362;
}
.userinfo .scroll-content .title-content .title-content-det {
  display: flex;
  /* width: 100%; */
  overflow: scroll;
  /* flex-wrap: nowrap; */
  /* flex-direction: column; */
  color: #ffffff;
}
.userinfo .scroll-content .title-content .title-content-det .det-div{
  width: 240rpx;
  display: inline-block;
}
.userinfo .scroll-content .title-content .title-content-det .det-div .title-date {
  font-size: 28rpx;
  background: #ffffff;
  color: #CD3333;
}
.userinfo .scroll-content .title-content .title-content-det .det-div .title-image{
  width: 240rpx;
  height: 280rpx;
  /* padding: 14rpx; */
  /* border-radius: 50%; */
}
.userinfo .scroll-content .title-content .title-content-det .det-div .title-text {
  font-size: 30rpx;
  width: 240rpx;
  height: 40rpx;
  line-height: 30rpx;
  margin-top: 0;
  text-align: center;
  background: #416362;
}
.susDiv {
  width: 200rpx;
  height: 400rpx;
  position: fixed;
  right: 0;
  top: 64%;
}
.susDiv .suspendView {
  height: 60rpx;
  padding: 10rpx 10rpx 10rpx 15rpx;
  margin-top: 20rpx;
  line-height: 60rpx;
  color: #FF8000;
  font-weight: bold;
  font-size: 35rpx;
  background: rgba(190, 190, 190, 0.4);
  text-align: center;
  border-bottom-left-radius: 150rpx;
  border-top-left-radius: 150rpx;
  z-index: 1000;
}
.container .achievement-list .list-title {
  text-align: center;
  font-size: 44rpx;
  margin-bottom: 8rpx;
  color: #191970;
}
.container .mask-info {
  width: 100%;
  height: 100%;
  /* background: rgba; */
}
.container .mask-info .mask-pop {
  height: 300rpx;
}
.container .mask-info .mask-pop .mask-txt {
  width: 100%;
  height: 64%;
  line-height: 190rpx;
  font-size: 50rpx;
  text-align: center;
}
.container .mask-info .mask-pop .mask-btn {
  width: 100%;
}