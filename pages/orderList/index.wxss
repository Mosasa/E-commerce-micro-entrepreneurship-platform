.container {
	width: 100%;
	margin: 0;
	padding: 0;
}
.container .order-list {
	width: 100%;
	height: 100%;
	margin-top: 10rpx;
}
.container .order-list .order-det {
	width: 90%;
	margin-left: 5%;
	height: 260rpx;
	margin-top: 20rpx;
	border: 0.5rpx solid #bfbfbf;
}
.container .order-list .order-det .trade-name {
	width: 100%;
	height: 80rpx;
	display: flex;
	border-bottom: 0.5rpx solid #bfbfbf;
}
.container .order-list .order-det .trade-name .trade-img {
	width: 50rpx;
	height: 50rpx;
	margin-top: 15rpx;
}
.container .order-list .order-det .trade-name .trade-text {
	height: 100%;
	margin-top: -38rpx;
	margin-left: 14rpx;
}
.container .order-list .order-det .order-mess {
	width: 100%;
	height: 180rpx;
	display: flex;
}
.container .order-list .order-det .order-mess .cus-mess {
	width: 80%;
	height: 100%;
	line-height: 74rpx;
	font-size: 34rpx;
	border-right: 0.5rpx solid #bfbfbf;
}
.container .order-list .order-det .order-mess .order-status {
	margin-left: 10rpx;
	line-height: 180rpx;
}