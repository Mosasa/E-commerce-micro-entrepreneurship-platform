/* pages/orderDetail/orderDetail.wxss */
.container {
	width: 100%;
	margin: 0;
	padding: 0;
}
.container .step-managed {
	width: 100%;
}
.container .step-managed .step-list {
	width: 100%;
}
.container .step-managed .step-btn {
	width: 70%;
	margin-left: 15%;
	margin-top: 20rpx;
}
.container .step-managed .step-btn button {
	width: 100%;
	height: 100%;
	/* font-size: 30rpx; */
	color: #ffffff;
	background: #FFA54F;
}
.container .order-detail {
	width: 100%;
	height: auto;
	margin-top: 74rpx;
}
.container .order-detail .det-nav {
	width: 82%;
	height: 30rpx;
	margin-left: 9%;
	background: #003D79;
	border-top-left-radius:12rpx;
	border-top-right-radius:12rpx;
}
.container .order-detail .det-header {
	width: 86%;
	height: 210rpx;
	line-height: 60rpx;
	margin-left: 7%;
	background: #004B97;
	border-top-left-radius:12rpx;
	border-top-right-radius:12rpx;
	display: flex;
	color: #ffffff;
}
.container .order-detail .det-header .order-id{
	width: 48%;
	margin-top: 8%;
	margin-left: 40rpx;
	display: flex;
	flex-direction: column;
}
.container .order-detail .det-header .order-id span {
	font-size: 32rpx;
}
.container .order-detail .det-header .order-status {
	margin-top: 8%;
	display: flex;
	flex-direction: column;
}
.container .order-detail .det-header .order-status span {
	font-size: 32rpx;
}
.container .order-detail .det-content {
	width: 86%;
	min-height: 400rpx;
	height: auto;
	margin-left: 7%;
	background: #005ab5;
}
.container .order-detail .det-content .con-header {
	width: 86%;
	height: 110rpx;
	line-height: 110rpx;
	margin-left: 40rpx;
	margin-bottom: 20rpx;
	color: #ffffff;
	font-size: 32rpx;
	display: flex;
	border-bottom: 0.01rpx dashed #ffffff;
}
.container .order-detail .det-content .con-header .con1 {
	width: 32%;
}
.container .order-detail .det-content .con-header .con2 {
	width: 12%;
}
.container .order-detail .det-content .con-header .con3 {
	width: 22%;
	text-align: right;
}
.container .order-detail .det-content .con-header .con4 {
	width: 28%;
	text-align: right;
}
.container .order-detail .det-content .con-list {
	width: 86%;
	height: auto;
	line-height: 70rpx;
	display: flex;
	/* justify-content: space-between; */
	color: #ffffff;
	margin-left: 40rpx;
	font-size: 34rpx;
}
.container .order-detail .det-content .con-list .list1 {
	width: 32%;
}
.container .order-detail .det-content .con-list .list2 {
	width: 12%;
	text-align: center;
}
.container .order-detail .det-content .con-list .list3 {
	width: 22%;
	text-align: right;
}
.container .order-detail .det-content .con-list .list4 {
	width: 28%;
	text-align: right;
}
.container .order-detail .det-content .list-total {
	width: 86%;
	margin-left: 40rpx;
	height: 120rpx;
	line-height: 120rpx;
	text-align: right;
	font-size: 54rpx;
	color: #ffffff;
	border-bottom: 0.01rpx dashed #ffffff;
}
.container .order-detail .det-content .send-mess {
	height: auto;
	line-height: 50rpx;
	margin-top: 40rpx;
	margin-left: 40rpx;
	color: #ffffff;
	font-size: 34rpx;
	padding-bottom: 20rpx;
}
.container .order-detail .det-content .send-mess .mess-title {
	font-size: 32rpx;
}