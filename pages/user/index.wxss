/* pages/user/user.wxss */
.container {
	width: 100%;
	height: 100%;
	margin: 0;
	padding: 0;
}
.myInfo {
	width: 100%;
	height: 400rpx;
	display: flex;
	justify-content: space-around;
	margin-top: 200rpx;
}
.myInfo .user-info, .saler-info {
	width: 50%;
	height:400rpx;
	line-height: 300rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
}
.myInfo .user-info {
	margin-left: 114rpx;
}
.myInfo .user-info .user-img{
	width: 200rpx;
	height: 200rpx;
}
.myInfo .user-info .user-name {
	width: 50%;
	height: 100rpx;
	margin-left: 30rpx;
}
.myInfo .saler-info .saler-img{
	width: 200rpx;
	height: 200rpx;
}
.myInfo .saler-info .saler-name{
	width: 50%;
	height: 100rpx;
}
.popDiv {
	width: 630rpx;
	height: 652rpx;
	line-height: 160rpx;
	padding-top: 30rpx;
	background: #f0f0f0;
}
.popDiv .nameDiv{
	margin-left: 36rpx;
	display: flex;
	align-items: center;
}
.popDiv input {
	width: 400rpx;
	height: 70rpx;
	line-height: 70rpx;
	display: inline-block;
	border: 0.5rpx solid #888888;
	border-bottom-left-radius: 10rpx;
	border-bottom-right-radius: 10rpx;
	border-top-left-radius: 10rpx;
	border-top-right-radius: 10rpx;
}
.popDiv button {
	width: 40%;	
	display: inline-block;
	margin-left: 7%;
	border-bottom-left-radius: 10rpx;
	border-bottom-right-radius: 10rpx;
	border-top-left-radius: 10rpx;
	border-top-right-radius: 10rpx;
}